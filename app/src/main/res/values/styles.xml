<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/real_blue</item>
        <item name="colorPrimaryDark">@color/real_blue</item>
        <item name="colorAccent">@color/real_yellow</item>
        <item name="android:statusBarColor">@color/real_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/glametrix</item>
    </style>

    <style name="TextView.Black">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextView.Bolt">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/glametrix_bold</item>
    </style>

    <style name="TextView.Bolt.23">
        <item name="android:textSize">33sp</item>
    </style>

    <style name="Digit">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/glametrix</item>
    </style>

    <style name="SplashTheme"
        parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
